# Azure DR 환경 변수 설정
# 이 파일을 terraform.tfvars로 복사하여 실제 값으로 수정하세요

# ===== Azure General Settings =====
resource_group_name = "rg-dr-multicloud"
azure_location      = "koreacentral"

# ===== Azure MySQL Settings =====
mysql_admin_username = "sqladmin"
# mysql_admin_password는 환경변수로 설정 권장: export TF_VAR_mysql_admin_password="YourStrongPassword123!"

mysql_sku_name    = "GP_Standard_D2ds_v4"
mysql_storage_gb  = 100
mysql_database_name = "webapp_db"

# ===== Azure App Service Settings =====
app_service_sku = "P1v3"
web_app_name    = "webapp-dr-multicloud-unique" # 글로벌 고유 이름 필요

# ===== Azure Storage Settings =====
storage_account_name = "stdrmulticloud001" # 글로벌 고유 이름 (3-24자, 소문자/숫자만)

# ===== VPN Settings =====
vpn_gateway_sku = "VpnGw2"
azure_bgp_asn   = 65515
aws_bgp_asn     = 64512

# AWS VPN 정보 (AWS VPN Connection 생성 후 업데이트)
# aws_vpn_gateway_ip      = "13.209.xxx.xxx"  # AWS VPN Tunnel Public IP
# aws_bgp_peering_address = "169.254.21.1"    # AWS BGP Peering Address
# vpn_shared_key          = "YourSharedKey123!" # 환경변수 권장: export TF_VAR_vpn_shared_key="..."

# ===== Monitoring Settings =====
alert_email = "admin@yourdomain.com"

# ===== DR Strategy Settings =====
enable_auto_failover              = false
enable_continuous_replication     = true
replication_lag_threshold_seconds = 60
